<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <!-- Detail Header Name -->
    <TextView
        android:id="@+id/stockDetailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorFontPrimaryDark"
        android:text="NAME"
        android:layout_marginTop="4dp"/>

    <!-- Details Data -->
    <TextView
        android:id="@+id/stockDetailData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stockDetailHeader"
        android:text="data"
        android:textSize="25dip"
        android:textColor="@color/colorFontPrimaryDark"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"/>

    <!-- Arrow -->
    <ImageView
        android:id="@+id/stockDetailArrow"
        android:layout_width="30dp"
        android:layout_toRightOf="@id/stockDetailData"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/stockDetailData"
        android:paddingBottom="2dp"
        />
    <ImageView
        android:id="@+id/chartData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/stockDetailData"
        android:layout_marginTop="-30dp"
        />
</RelativeLayout>
